# Application settings
SECRET_KEY=your-secret-key-here-change-in-production
API_HOST=0.0.0.0
API_PORT=9000

# Environment (development or production)
# IMPORTANT: Set to "production" to enable security middleware
ENVIRONMENT=development

# Database settings
POSTGRES_USER=ae
POSTGRES_PASSWORD=your-secure-password-here
POSTGRES_DB=ae_tuition
POSTGRES_PORT=5440
SQL_ECHO=false  # Set to true to enable SQL query logging for debugging

# AWS settings
AWS_ACCESS_KEY=your-aws-access-key
AWS_SECRET_KEY=your-aws-secret-key
AWS_S3_BUCKET=your-s3-bucket-name
AWS_REGION=eu-west-2

# CloudFront CDN
CLOUDFRONT_URL=https://your-cloudfront-url.cloudfront.net/

# Email service (Resend)
RESEND_API_KEY=your-resend-api-key
FROM_EMAIL=noreply@your-domain.com

# Frontend URL
FRONTEND_URL=http://localhost:4200

# Default admin account
DEFAULT_ADMIN_EMAIL=admin@your-domain.com
DEFAULT_ADMIN_USERNAME=admin
DEFAULT_ADMIN_PASSWORD=ChangeThisPassword123!!
DEFAULT_ADMIN_FULL_NAME=Admin User

# ===========================================
# Security Settings (Production Only)
# ===========================================
# These settings are only active when ENVIRONMENT=production

# Redis URL for distributed rate limiting
# In production: redis://redis:6379
# In development: memory:// (in-memory, non-distributed)
REDIS_URL=memory://

# Email address to receive security alerts
SECURITY_ALERT_EMAIL=security@your-domain.com

# IP blocking settings
IP_BLOCK_THRESHOLD=10        # Number of violations before blocking
IP_BLOCK_DURATION_MINUTES=60 # How long to block offending IPs
IP_TRACK_WINDOW_MINUTES=5    # Time window for counting violations

# Trusted proxies (comma-separated, for X-Forwarded-For handling)
TRUSTED_PROXIES=127.0.0.1